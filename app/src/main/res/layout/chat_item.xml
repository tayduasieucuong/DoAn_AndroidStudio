<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/user_message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_user"></ImageView>

        <LinearLayout
            android:id="@+id/opp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="100dp"
            android:layout_toEndOf="@id/user_message"
            android:orientation="vertical">

            <TextView
                android:id="@+id/opp_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Nickname"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/opp_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/opp_msg_back"
                android:padding="20dp"
                android:text="This is opponent message" />

            <TextView
                android:id="@+id/opp_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="01-01-2021 00:00:AM"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">



        <LinearLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/my_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_msg_back"
                android:padding="20dp"
                android:text="This is my message" />

            <TextView
                android:id="@+id/my_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="01-01-2021 00:00:AM"
                android:textSize="10sp"
                android:layout_gravity="end"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>