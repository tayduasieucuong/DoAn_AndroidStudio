<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/border_radius_whitebg"
    tools:context=".HomePageGroup">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        android:text="Học tiếng anh mỗi ngày"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        android:text="Admin"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="10/10/2021"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tv_admin"
        app:layout_constraintTop_toBottomOf="@id/tv_admin"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/btn_complete"
        app:layout_constraintEnd_toStartOf="@id/btn_complete"
        android:src="@drawable/ic_baseline_delete_24_black"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/btn_complete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_radio_button_unchecked_24"
        app:layout_constraintTop_toTopOf="@id/tv_time"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>